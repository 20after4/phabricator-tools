#!/usr/bin/env python
# encoding: utf-8

"""Maily is a simple wrapper around sendmail."""

import argparse
import sys

import phlmail_sender
import phlsys_sendmail


def main():
    description = str("""
Maily - a sendmail wrapper

Intended primarily to test our sendmail integration, this can also be used
as a very simple wrapper around sendmail.
    """)

    epilog = str("""
usage example:
    $ ./maily \\
        --from me@server.example \\
        --to you@server.example \\
        --subject "my subject" \\
        --message "my message"
    """)

    parser = argparse.ArgumentParser(
        formatter_class=argparse.RawDescriptionHelpFormatter,
        description=description,
        epilog=epilog)

    parser.add_argument(
        '--sender',
        metavar="EMAIL",
        type=str,
        required=True,
        help="address to send the mail from")

    parser.add_argument(
        '--to',
        metavar="EMAIL",
        nargs='+',
        type=str,
        required=True,
        help="addresses to send the mail to")

    parser.add_argument(
        '--cc',
        metavar="EMAIL",
        nargs='+',
        type=str,
        help="addresses to cc the mail to")

    parser.add_argument(
        '--subject',
        metavar="TEXT",
        type=str,
        required=True,
        help="subject line of the message")

    parser.add_argument(
        '--message',
        metavar="TEXT",
        type=str,
        required=True,
        help="body of the message")

    parser.add_argument(
        '--binary',
        metavar="PROGRAM",
        type=str,
        help="program to send the mail with")

    args = parser.parse_args()

    binary = args.binary if args.binary else None
    mailsender = phlmail_sender.MailSender(
        phlsys_sendmail.Sendmail(binary),
        args.sender)
    mailsender.send(
        to_addresses=args.to,
        subject=args.subject,
        message=args.message,
        cc_addresses=args.cc)


if __name__ == "__main__":
    sys.exit(main())

